<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

        <ImageView
            android:id="@+id/teddy_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            android:src="@drawable/teddy"/>

        <TextView
            android:id="@+id/netLevel"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:text="niveau réseau" />

        <TextView
            android:id="@+id/netConnect"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:textSize="12sp"
            android:text="Statut réseau" />

        <TextView
            android:id="@+id/txtSignal"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp" />

        <!-- ✅ LinearLayout horizontal pour les 2 boutons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

                <Button
                    android:id="@+id/btnRefreshConnect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="refresh_connect"
                    android:background="@drawable/custom_button"/>

                <Button
                    android:id="@+id/btnRefresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="refresh"
                    android:background="@drawable/custom_button"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Home"
            android:background="@drawable/custom_button"/>
</LinearLayout>
